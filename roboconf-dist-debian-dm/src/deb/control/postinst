################################################################################
#
# Post installation script
#
################################################################################

set -e

# Source debconf library.
. /usr/share/debconf/confmodule

# The 'roboconf' user was created in the pre-install script
USER=roboconf-dm
GROUP=roboconf-dm

# Create the /ETC directory
ROBOCONF_DM_ETC=/etc/roboconf-dm
mv -n /opt/roboconf-dm/etc $ROBOCONF_DM_ETC > /dev/null 2>&1 || true
chown -R $USER:$GROUP $ROBOCONF_DM_ETC > /dev/null 2>&1 || true

# Update the logging configuration
sed -i -r 's/\$\{karaf\.data\}\/log/\/var\/log\/roboconf-dm/g' /etc/roboconf-dm/org.ops4j.pax.logging.cfg

# Ask for messaging type using debconf (see debconf "templates" file),
# then replace messaging-type in roboconf-dm config (according to user input).
db_input critical roboconf-dm/messaging || true
db_go
db_get roboconf-dm/messaging || true
if [ "$RET" != "http" ]; then
    sed -i "/messaging-type =/c messaging-type = $RET" $ROBOCONF_DM_ETC/net.roboconf.dm.configuration.cfg

    db_beginblock
      db_input high roboconf-dm/messaging-rabbitmq-host || true
      db_input high roboconf-dm/messaging-rabbitmq-user || true
      db_input high roboconf-dm/messaging-rabbitmq-password || true
    db_endblock
    db_go
    db_get roboconf-dm/messaging-rabbitmq-host || true
    rabbithost=$RET
    db_get roboconf-dm/messaging-rabbitmq-user || true
    rabbituser=$RET
    db_get roboconf-dm/messaging-rabbitmq-password || true
    rabbitpassword=$RET

    echo "# RabbitMQ messaging parameters (generated by Debian installer)" > $ROBOCONF_DM_ETC/net.roboconf.messaging.rabbitmq.cfg
    echo net.roboconf.messaging.rabbitmq.server.ip = $rabbithost >> $ROBOCONF_DM_ETC/net.roboconf.messaging.rabbitmq.cfg
    echo net.roboconf.messaging.rabbitmq.server.username = $rabbituser >> $ROBOCONF_DM_ETC/net.roboconf.messaging.rabbitmq.cfg
    echo net.roboconf.messaging.rabbitmq.server.password = $rabbitpassword >> $ROBOCONF_DM_ETC/net.roboconf.messaging.rabbitmq.cfg

else

    db_beginblock
      db_input high roboconf-dm/messaging-http-host || true
      db_input high roboconf-dm/messaging-http-port || true
    db_endblock
    db_go
    db_get roboconf-dm/messaging-http-host || true
    httphost=$RET
    db_get roboconf-dm/messaging-http-port || true
    httpport=$RET

    echo "# HTTP messaging parameters (generated by Debian installer)" > $ROBOCONF_DM_ETC/net.roboconf.messaging.http.cfg
    echo net.roboconf.messaging.http.server.ip = $httphost >> $ROBOCONF_DM_ETC/net.roboconf.messaging.http.cfg
    echo net.roboconf.messaging.http.server.port = $httpport >> $ROBOCONF_DM_ETC/net.roboconf.messaging.http.cfg

fi

# Create the /VAR/LOG directory
ROBOCONF_DM_VAR_LOG=/var/log/roboconf-dm
mkdir -p $ROBOCONF_DM_VAR_LOG > /dev/null 2>&1 || true
chown $USER:$GROUP $ROBOCONF_DM_VAR_LOG > /dev/null 2>&1 || true

# Move the data directory
ROBOCONF_DM_VAR_LIB=/var/lib/roboconf-dm
mv -n /opt/roboconf-dm/data $ROBOCONF_DM_VAR_LIB
chown -R $USER:$GROUP $ROBOCONF_DM_VAR_LIB

# Register the dm's automatic startup
update-rc.d roboconf-dm defaults

# Start
if which invoke-rc.d >/dev/null 2>&1; then
   invoke-rc.d --force roboconf-dm start
else
   /etc/init.d/roboconf-dm start
fi
